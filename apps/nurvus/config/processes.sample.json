[
  {
    "id": "my_app",
    "name": "My Application",
    "command": "bun",
    "args": ["run", "start"],
    "cwd": "/path/to/my/app",
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000"
    },
    "auto_restart": true,
    "max_restarts": 3,
    "restart_window": 60
  },
  {
    "id": "worker",
    "name": "Background Worker",
    "command": "python",
    "args": ["worker.py"],
    "cwd": "/path/to/worker",
    "env": {},
    "auto_restart": true,
    "max_restarts": 5,
    "restart_window": 120
  }
]