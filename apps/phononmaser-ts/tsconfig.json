{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["bun-types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@events": ["./events"],
      "@events/*": ["./events/*"],
      "@lib/*": ["./lib/*"],
      "@services": ["./services"],
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}