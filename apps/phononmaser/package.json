{
  "name": "@landale/phononmaser",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "uv run python -m src.main",
    "test": "uv run pytest",
    "test:watch": "uv run pytest -f",
    "test:coverage": "uv run pytest --cov=src --cov-report=html --cov-report=term",
    "lint": "uv run ruff check .",
