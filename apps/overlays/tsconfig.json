{
  "extends": "../../tsconfig.react.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "+/*": ["./assets/*"],
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    }
  },
  "include": ["src", "__tests__"],
  "references": [{ "path": "./tsconfig.node.json" }]
}