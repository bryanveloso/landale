{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.test.ts", "src/**/*.d.ts", "__tests__/**/*"],
  "exclude": ["dist", "node_modules"]
}