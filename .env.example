# Copy this file to .env and fill in your values

# Database (set by docker-compose for containers)
DATABASE_URL=postgres://landale:landale@localhost:5433/landale

# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_EVENTSUB_SECRET="your_eventsub_secret"
TWITCH_USER_ID=your_twitch_user_id
TWITCH_USERNAME=your_twitch_username
TWITCH_CALLBACK_URL=http://localhost:8008/api/twitch

# OBS WebSocket (optional)
OBS_WEBSOCKET_PASSWORD=your_obs_password

# Internal Ports (optional, defaults shown)
LANDALE_HTTP_PORT=8008
LANDALE_WEBSOCKET_PORT=7175
LANDALE_TCPSOCKET_PORT=8080

# Logging (optional)
LOG_LEVEL=info
STRUCTURED_LOGGING=false
EOF < /dev/null
