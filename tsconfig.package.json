{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "types": ["node", "bun"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
